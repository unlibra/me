---
import '../styles/global.css';

interface Project {
  title: string;
  description: string;
  subcategory?: string;
  imageUrl?: string;
  year?: string;
  link?: string;
}

const softwareWorks: Project[] = [
  {
    title: 'Project Name',
    description: 'Web development project showcasing modern design and functionality.',
    subcategory: 'Website',
    year: '2024',
    link: 'https://example.com',
  },
];

const hardwareWorks: Project[] = [
  {
    title: 'Keyboard Build #1',
    description: 'Custom mechanical keyboard with 60% layout and premium switches.',
    year: '2024',
  },
  {
    title: 'Keyboard Build #2',
    description: 'Ergonomic split keyboard designed for comfort and efficiency.',
    year: '2023',
  },
  {
    title: 'Keyboard Build #3',
    description: 'Ortholinear low-profile wireless keyboard with custom PCB.',
    year: '2023',
  },
];
---

<!doctype html>
<html lang="ja" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Portfolio - Selected Works" />
    <title>Portfolio</title>
    <style>
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .fade-in-up {
        animation: fadeInUp 0.8s ease-out forwards;
        opacity: 0;
      }

      .delay-100 { animation-delay: 0.1s; }
      .delay-200 { animation-delay: 0.2s; }
      .delay-300 { animation-delay: 0.3s; }
      .delay-400 { animation-delay: 0.4s; }
    </style>
  </head>
  <body class="bg-black text-white antialiased">
    <!-- Minimal Header -->
    <header class="fixed top-0 w-full z-50 mix-blend-difference">
      <nav class="container mx-auto px-6 md:px-12 py-8">
        <div class="flex justify-between items-center">
          <a href="#top" class="text-sm tracking-widest uppercase hover:opacity-50 transition-opacity">
            Portfolio
          </a>
          <div class="flex gap-8 text-sm tracking-wide">
            <a href="#works" class="hover:opacity-50 transition-opacity">Works</a>
            <a href="#contact" class="hover:opacity-50 transition-opacity">Contact</a>
          </div>
        </div>
      </nav>
    </header>

    <!-- Hero Section - Full Screen -->
    <section id="top" class="min-h-screen flex items-center justify-center px-6 relative">
      <div class="text-center max-w-5xl mx-auto">
        <h1 class="text-6xl md:text-8xl lg:text-9xl font-light tracking-tight mb-8 fade-in-up">
          [Your Name]
        </h1>
        <p class="text-lg md:text-xl tracking-wider text-neutral-400 fade-in-up delay-100">
          Developer × Designer × Maker
        </p>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-12 left-1/2 -translate-x-1/2 fade-in-up delay-300">
        <a href="#works" class="block text-xs tracking-widest opacity-50 hover:opacity-100 transition-opacity">
          <div class="w-px h-16 bg-white mx-auto mb-2"></div>
          SCROLL
        </a>
      </div>
    </section>

    <!-- Works Gallery -->
    <section id="works" class="py-32 px-6 md:px-12">
      <div class="container mx-auto max-w-7xl">
        <!-- Section Title -->
        <div class="mb-32">
          <h2 class="text-sm tracking-widest uppercase text-neutral-500 mb-4">Selected Works</h2>
          <div class="w-12 h-px bg-white"></div>
        </div>

        <!-- Category: Software -->
        <div class="mb-48">
          <!-- Category Header -->
          <div class="mb-20 flex items-start gap-8 md:gap-16">
            <span class="text-6xl md:text-8xl font-light text-neutral-800 tracking-tighter">01</span>
            <div class="pt-4">
              <h3 class="text-3xl md:text-5xl font-light tracking-tight mb-3">Software</h3>
              <p class="text-sm tracking-wider text-neutral-500 uppercase">Web / App Development</p>
            </div>
          </div>

          <!-- Software Projects -->
          {softwareWorks.length > 0 ? (
            <div class="space-y-32">
              {softwareWorks.map((work, index) => (
                <article class="group">
                  {index % 2 === 0 ? (
                    <div class="grid md:grid-cols-2 gap-8 md:gap-16 items-center">
                      <a
                        href={work.link || '#'}
                        class="relative aspect-[4/3] bg-neutral-900 overflow-hidden block"
                        target={work.link ? '_blank' : undefined}
                        rel={work.link ? 'noopener noreferrer' : undefined}
                      >
                        {work.imageUrl ? (
                          <img
                            src={work.imageUrl}
                            alt={work.title}
                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                          />
                        ) : (
                          <div class="w-full h-full bg-gradient-to-br from-neutral-800 to-neutral-900"></div>
                        )}
                        <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-30 transition-opacity duration-500"></div>
                      </a>
                      <div class="space-y-6">
                        <div>
                          <p class="text-xs tracking-widest uppercase text-neutral-500 mb-2">
                            {work.subcategory || 'Software'} {work.year && `— ${work.year}`}
                          </p>
                          <h4 class="text-3xl md:text-4xl font-light mb-4 tracking-tight">
                            {work.title}
                          </h4>
                          <p class="text-neutral-400 leading-relaxed">
                            {work.description}
                          </p>
                        </div>
                        {work.link && (
                          <a
                            href={work.link}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 text-sm tracking-wider hover:opacity-50 transition-opacity group/link"
                          >
                            View Project
                            <svg class="w-4 h-4 transition-transform group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                            </svg>
                          </a>
                        )}
                      </div>
                    </div>
                  ) : (
                    <div class="grid md:grid-cols-2 gap-8 md:gap-16 items-center">
                      <div class="space-y-6 md:order-1">
                        <div>
                          <p class="text-xs tracking-widest uppercase text-neutral-500 mb-2">
                            {work.subcategory || 'Software'} {work.year && `— ${work.year}`}
                          </p>
                          <h4 class="text-3xl md:text-4xl font-light mb-4 tracking-tight">
                            {work.title}
                          </h4>
                          <p class="text-neutral-400 leading-relaxed">
                            {work.description}
                          </p>
                        </div>
                        {work.link && (
                          <a
                            href={work.link}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 text-sm tracking-wider hover:opacity-50 transition-opacity group/link"
                          >
                            View Project
                            <svg class="w-4 h-4 transition-transform group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                            </svg>
                          </a>
                        )}
                      </div>
                      <a
                        href={work.link || '#'}
                        class="relative aspect-[4/3] bg-neutral-900 overflow-hidden block md:order-2"
                        target={work.link ? '_blank' : undefined}
                        rel={work.link ? 'noopener noreferrer' : undefined}
                      >
                        {work.imageUrl ? (
                          <img
                            src={work.imageUrl}
                            alt={work.title}
                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                          />
                        ) : (
                          <div class="w-full h-full bg-gradient-to-br from-neutral-800 to-neutral-900"></div>
                        )}
                        <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-30 transition-opacity duration-500"></div>
                      </a>
                    </div>
                  )}
                </article>
              ))}
            </div>
          ) : (
            <div class="text-center py-20">
              <p class="text-neutral-600 text-sm tracking-wider">Coming soon...</p>
            </div>
          )}
        </div>

        <!-- Category: Hardware -->
        <div>
          <!-- Category Header -->
          <div class="mb-20 flex items-start gap-8 md:gap-16">
            <span class="text-6xl md:text-8xl font-light text-neutral-800 tracking-tighter">02</span>
            <div class="pt-4">
              <h3 class="text-3xl md:text-5xl font-light tracking-tight mb-3">Hardware</h3>
              <p class="text-sm tracking-wider text-neutral-500 uppercase">Custom Keyboards</p>
            </div>
          </div>

          <!-- Hardware Projects -->
          {hardwareWorks.length > 0 ? (
            <div class="space-y-32">
              {hardwareWorks.map((work, index) => (
                <article class="group">
                  {index % 2 === 0 ? (
                    <div class="grid md:grid-cols-2 gap-8 md:gap-16 items-center">
                      <a
                        href={work.link || '#'}
                        class="relative aspect-[4/3] bg-neutral-900 overflow-hidden block"
                        target={work.link ? '_blank' : undefined}
                        rel={work.link ? 'noopener noreferrer' : undefined}
                      >
                        {work.imageUrl ? (
                          <img
                            src={work.imageUrl}
                            alt={work.title}
                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                          />
                        ) : (
                          <div class="w-full h-full bg-gradient-to-br from-neutral-800 to-neutral-900"></div>
                        )}
                        <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-30 transition-opacity duration-500"></div>
                      </a>
                      <div class="space-y-6">
                        <div>
                          <p class="text-xs tracking-widest uppercase text-neutral-500 mb-2">
                            {work.subcategory || 'Keyboard'} {work.year && `— ${work.year}`}
                          </p>
                          <h4 class="text-3xl md:text-4xl font-light mb-4 tracking-tight">
                            {work.title}
                          </h4>
                          <p class="text-neutral-400 leading-relaxed">
                            {work.description}
                          </p>
                        </div>
                        {work.link && (
                          <a
                            href={work.link}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 text-sm tracking-wider hover:opacity-50 transition-opacity group/link"
                          >
                            View Project
                            <svg class="w-4 h-4 transition-transform group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                            </svg>
                          </a>
                        )}
                      </div>
                    </div>
                  ) : (
                    <div class="grid md:grid-cols-2 gap-8 md:gap-16 items-center">
                      <div class="space-y-6 md:order-1">
                        <div>
                          <p class="text-xs tracking-widest uppercase text-neutral-500 mb-2">
                            {work.subcategory || 'Keyboard'} {work.year && `— ${work.year}`}
                          </p>
                          <h4 class="text-3xl md:text-4xl font-light mb-4 tracking-tight">
                            {work.title}
                          </h4>
                          <p class="text-neutral-400 leading-relaxed">
                            {work.description}
                          </p>
                        </div>
                        {work.link && (
                          <a
                            href={work.link}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="inline-flex items-center gap-2 text-sm tracking-wider hover:opacity-50 transition-opacity group/link"
                          >
                            View Project
                            <svg class="w-4 h-4 transition-transform group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                            </svg>
                          </a>
                        )}
                      </div>
                      <a
                        href={work.link || '#'}
                        class="relative aspect-[4/3] bg-neutral-900 overflow-hidden block md:order-2"
                        target={work.link ? '_blank' : undefined}
                        rel={work.link ? 'noopener noreferrer' : undefined}
                      >
                        {work.imageUrl ? (
                          <img
                            src={work.imageUrl}
                            alt={work.title}
                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                          />
                        ) : (
                          <div class="w-full h-full bg-gradient-to-br from-neutral-800 to-neutral-900"></div>
                        )}
                        <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-30 transition-opacity duration-500"></div>
                      </a>
                    </div>
                  )}
                </article>
              ))}
            </div>
          ) : (
            <div class="text-center py-20">
              <p class="text-neutral-600 text-sm tracking-wider">Coming soon...</p>
            </div>
          )}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="min-h-screen flex items-center justify-center px-6 py-32">
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-sm tracking-widest uppercase text-neutral-500 mb-12">Get In Touch</h2>
        <p class="text-2xl md:text-3xl font-light mb-16 leading-relaxed text-neutral-300">
          Available for freelance projects<br />and collaborations
        </p>

        <!-- Contact Links -->
        <div class="flex flex-col md:flex-row justify-center gap-6 md:gap-12 mb-16">
          <a
            href="mailto:your.email@example.com"
            class="text-lg tracking-wide hover:opacity-50 transition-opacity"
          >
            your.email@example.com
          </a>
        </div>

        <!-- Social Links -->
        <div class="flex justify-center gap-8">
          <a
            href="https://github.com/yourusername"
            target="_blank"
            rel="noopener noreferrer"
            class="text-xs tracking-widest uppercase hover:opacity-50 transition-opacity"
          >
            GitHub
          </a>
          <a
            href="https://twitter.com/yourusername"
            target="_blank"
            rel="noopener noreferrer"
            class="text-xs tracking-widest uppercase hover:opacity-50 transition-opacity"
          >
            Twitter
          </a>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-12 px-6 border-t border-neutral-900">
      <div class="container mx-auto text-center">
        <p class="text-xs tracking-wider text-neutral-600">
          &copy; 2025 All rights reserved
        </p>
      </div>
    </footer>
  </body>
</html>
