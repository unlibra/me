---
import "@/styles/global.css";
import "@fontsource/ibm-plex-sans-jp/400.css";
import "@fontsource/ibm-plex-sans-jp/500.css";
import "@fontsource/ibm-plex-sans-jp/700.css";
import Analytics from "@/components/Analytics.astro";

interface Props {
  frontmatter?: {
    title?: string;
  };
}

const { frontmatter } = Astro.props;
const title = frontmatter?.title || "プライバシーポリシー";
const siteName = import.meta.env.PUBLIC_SITE_TITLE || "unlibra.com";
const siteTitle = title + " - " + siteName;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{siteTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />
  </head>
  <body class="antialiased">
    <div class="mx-auto max-w-3xl px-4 py-8">
      <main class="prose max-w-none">
        <slot />
      </main>
      <footer class="mt-12 border-t border-neutral-200 pt-8 text-center text-sm text-neutral-500">
        <a href="/" class="hover:underline">{siteName}</a>
      </footer>
    </div>
    <Analytics />
  </body>
</html>

<style is:global>
  .prose h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }

  .prose h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .prose p {
    margin-top: 0.75rem;
    margin-bottom: 0.75rem;
    line-height: 1.75;
  }

  .prose strong {
    font-weight: 600;
  }

  .prose ul {
    margin-top: 0.5rem;
    margin-bottom: 1rem;
    padding-left: 1.5rem;
    list-style-type: disc;
  }

  .prose li {
    margin-top: 0.25rem;
    margin-bottom: 0.25rem;
  }

  .prose a {
    color: #3ba0be;
    text-decoration: underline;
  }

  .prose a:hover {
    color: #1a7ba0;
  }
</style>
